{
    "name": "chimera/routing",
    "description": "A collection of reusable PSR-15 components that connects Chimera to any framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lu√≠s Cobucci",
            "email": "lcobucci@gmail.com"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "chimera/foundation": "self.version",
        "fig/http-message-util": "^1.1",
        "lcobucci/content-negotiation-middleware": "^2.1",
        "middlewares/negotiation": "^1.1",
        "psr/http-factory": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "infection/infection": "^0.15",
        "lcobucci/coding-standard": "^3.1",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-deprecation-rules": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpunit/phpunit": "^9.0",
        "zendframework/zend-diactoros": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Chimera\\Routing\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chimera\\Routing\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4.x-dev"
        }
    }
}
